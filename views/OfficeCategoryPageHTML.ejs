<!DOCTYPE html>

<html>

    <title>

        Office Products

    </title>

    <script src="https://kit.fontawesome.com/5471644867.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" type="text/css" href="css/Office Category Page CSS.css">

    <body>

        <section id="popular-product">
            <!--heading----------->
            <div class="product-heading">
                <h2 class = 'fruits-heading'>Office Products</h2>
            </div>
            <div class="product-container">
                <!--box---------->
                <% for(var i = 0; i<officeList.length; i++) { %>
                <div class="product-box" style = "height: 95%;">
                    <img alt=<%= officeList[i].name %> src=<%= officeList[i].imageurl %>>
                    <strong><%= officeList[i].name %></strong>
                    <span class="quantity">Quantity : <%= officeList[i].stock %></span>
                    <span class="price">Rs. <%= officeList[i].price %></span>
                    <!--cart-btn------->
                    <form action="/ShoppingCartHTML" method="post">
                    <button name="submit_button" value=<%= officeList[i].name %> href="ShoppingCartHTML" class="cart-btn" style = 'text-decoration: none;'>
                        <i class="fas fa-shopping-bag"></i> Add to Cart
                    </button>
                    </form>
                    <!--like-btn------->
                    <a class="like-btn" style = 'text-decoration: none;'>
                        <i class="far fa-heart"></i>
                    </a>
                </div>
                <% } %>
                
            </div>
        </section>

    </body>

</html>