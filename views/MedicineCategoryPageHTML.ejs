
<%- include('partials/header2') %>
        <section id="popular-product">
            <!--heading----------->
            <div class="product-heading">
                <h2 class = 'fruits-heading'>Medicines</h2>
            </div>
            
            <div class="product-container">
                <!--box---------->
                <% for(var i = 0; i<medicineList.length; i++) { %>
                <div class="product-box" style = "height: 95%;">
                    <img alt=<%= medicineList[i].name %> src=<%= medicineList[i].imageurl %>>
                    <strong><%= medicineList[i].name %></strong>
                    <span class="quantity">Quantity : <%= medicineList[i].stock %></span>
                    <span class="price">Rs. <%= medicineList[i].price %></span>
                    <!--cart-btn------->
                    <form action="/ShoppingCartHTML" method="post">
                    <button name="submit_button" value=<%= medicineList[i].name %> href="ShoppingCartHTML" class="cart-btn" style = 'text-decoration: none;'>
                        <i class="fas fa-shopping-bag"></i> Add to Cart
                    </button>
                    </form>
                    <!--like-btn------->
                    <a class="like-btn" style = 'text-decoration: none;'>
                        <i class="far fa-heart"></i>
                    </a>
                </div>
                <% } %>
                
            </div>
        </section>
<%- include('partials/footer2') %>

  